include catppuccin-mocha
set $mod Mod4
set $filemgr dolphin
set $term kitty
set $menu rofi -show drun
exec --no-startup-id flameshot &
exec --no-startup-id wl-paste --type text --watch cliphist store
exec --no-startup-id wl-paste --type image --watch cliphist store
bindsym Insert exec bash $HOME/.config/sway/screenshot
bindsym Print exec bash $HOME/.config/sway/screenshot-desktop
output DP-1 mode 1920x1080@240Hz
output * bg $HOME/Downloads/image.png fill

floating_modifier $mod normal
bindsym $mod+Shift+q kill
bindsym Alt+F4 kill
bindsym $mod+e exec $filemgr
bindsym $mod+Shift+Alt+D exec swaymsg output eDP-1 disable
bindsym $mod+Shift+Alt+E exec swaymsg output eDP-1 enable
bindsym Control+Alt+t exec $term
bindsym $mod+Shift+g exec gammastep -g 1.3 -P -o -l 51.55664:7.31927 -t 6500K:6500K
bindsym $mod+r exec $menu
bindsym $mod+f floating toggle
bindsym $mod+Alt+f fullscreen
bindsym $mod+Shift+c reload
bindsym $mod+l exec lockscreen
bindsym $mod+m exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
bindsym $mod+v exec cliphist list | rofi -dmenu | cliphist decode | wl-copy
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+1 workspace number 1
